    "@types/jsdom": "^21.1.7",
    "@vitest/coverage-v8": "^2.0.5",
    "jsdom": "^24.1.1",
    "microbundle": "^0.15.1",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
